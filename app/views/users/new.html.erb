<div class="contents">
  <div class="container">
    <%= form_with(model: @user, local:true) do |f| %>
      <div class="form-group">
        <div class="form-wrap">
          <div class="form-title">ユーザー名</div>
           <%= f.text_field :name, class: "form-box" %>
        </div>
      </div>

      <div class="form-group">
        <div class="form-wrap">
          <div class="form-title">メールアドレス</div>
           <%= f.text_field :email, class: "form-box" %>
        </div>
      </div>

      <div class="form-group">
        <div class="form-wrap">
          <div class="form-title">パスワード</div>
           <%= f.password_field :passwword, class: "form-box" %>
        </div>
      </div>

      <div class="form-group">
        <div class="form-wrap">
          <div class="form-title">パスワード（確認）</div>
           <%= f.password_field :passwword_comfirmation, class: "form-box" %>
        </div>
      </div>
      <div class="submit">
           <%= f.submit "保存", class:"submit-btn" %>
           <%= link_to "ログイン", login_path %>
      </div> 
    <% end %>
  </div>
</div>
